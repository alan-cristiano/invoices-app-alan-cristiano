generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
}

model Customer {
  id String @id @default(uuid())
  name String
  email String @unique
  image_url String

  invoices Invoice[]
}

model Invoice {
  id String @id @default(uuid())
  amount Int
  status String
  date DateTime @default(now())
  
  customer_id String
  customer Customer @relation(fields: [customer_id], references: [id])
}

model Revenue {
  id String @id @default(uuid())
  month String
  revenue Int
}